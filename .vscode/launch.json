{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Chrome)",            
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200",
            "port": 9223,
            "sourceMaps": true,
            "trace": "verbose",
            "webRoot": "${workspaceRoot}",
            "runtimeArgs": [
                "--disable-session-crashed-bubble",
                "--disable-infobars"
            ],
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        },
        {
            "name": "Debug Tests (Chrome)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "edge",
            "request": "launch",
            "name": "Launch (Edge)",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "edge",
            "request": "attach",
            "name": "Attach to Edge",
            "port": 9222,
            "webRoot": "${workspaceRoot}"
        }
    ]
}